@model Recreationals.Public.Models.Term.TermTryCreateReq

<div class="container">
    <div class="shadow p-3 mb-5 bg-light rounded">Rezervacija termina</div>

    <form asp-area="Public" asp-controller="Terms" asp-action="TryCreate" method="post">
        <input type="hidden" name="FieldId" value="@Model.FieldId" />

        <div class="form-group">
            <label for="formGroupExampleInput">Početak</label>
            @Html.TextBoxFor(model => model.StartTime,
            new { @type = "date", @Value = Model.StartTime.ToString("dd/MM/yyyy hh:mm") })
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput">Kraj</label>
            @Html.TextBoxFor(model => model.EndTime,
                new { @type = "date", @Value = Model.EndTime.ToString("dd/MM/yyyy hh:mm") })
        </div>
        <hr />
        <span class="badge badge-primary badge-pill">
            <a class="nav-link text-white" asp-area="Public" asp-controller="Fields" asp-action="Details" asp-route-id="@Model.FieldId">Nazad</a>
        </span>
        <button type="submit" class="btn btn-success">Spasi</button>
    </form>
</div>
